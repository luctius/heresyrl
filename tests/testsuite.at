AT_INIT  
AT_BANNER([Regression tests.])  
AT_SETUP([heresyrl --help])  
AT_KEYWORDS([minimal])  
AT_CHECK([../../heresyrl --help], [], [ignore], [ignore])  
AT_CLEANUP

AT_SETUP([heresyrl --test_auto minimal])  
AT_KEYWORDS([minimal])  
AT_CHECK([  cp ../../tests/testdata/save.2 ./save && 
            cp ../../tests/testdata/save.2 ./save.ref && 
            ../../heresyrl --pb_delay=0 --test_auto --save_file=./save --log_file=./log && 
            sed -i"b" "/.*version/D" save && 
            sed -i"b" "/.*version/D" save.ref && 
            diff -q save save.ref], [], [ignore], [ignore])  
AT_CLEANUP
